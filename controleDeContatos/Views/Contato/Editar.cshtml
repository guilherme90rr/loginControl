@{
    ViewData["Title"] = "Editar contato";
}

<div class="text-center">

    <h1 class="display-4">Editar contato</h1>

</div>


<form>
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" placeholder="Digite o nome do contato">
        <br />
    </div>
    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="text" class="form-control" placeholder="Digite o e-mail do contato">
        <br />
    </div>
    <div class="form-group">
        <label for="celular">Telefone</label>
        <input type="text" class="form-control" placeholder="Digite o telefone do contato">
    </div>
    <br />
    <div class="text-center">
        <button type="submit" class="btn btn-primary w-50">Alterar</button>
        <br></br>
        <a class="btn btn-secondary w-50" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
    </div>
</form>